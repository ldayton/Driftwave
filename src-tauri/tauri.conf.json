{
  "identifier": "com.github.ldayton.driftwave",
  "productName": "Driftwave",
  "mainBinaryName": "driftwave",
  "version": "0.1.0",
  "build": {
    "beforeDevCommand": "",
    "beforeBuildCommand": "",
    "frontendDist": "../src"
  },
  "app": {
    "withGlobalTauri": true,
    "windows": [
      {
        "label": "main",
        "fullscreen": false,
        "resizable": true,
        "title": "Driftwave",
        "width": 1200,
        "height": 800
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": ["nsis", "deb", "rpm", "dmg", "app"],
    "icon": [
      "icons/icon.png",
      "icons/icon.ico"
    ],
    "resources": [
      "assets/*"
    ],
    "windows": {
      "wix": {
        "language": "en-US"
      }
    }
  },
  "plugins": {}
}
{
  "name": "driftwave",
  "version": "0.1.0",
  "description": "Audio waveform renderer with playback",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "build:wasm": "cd ../src-web && wasm-pack build --dev --target web --out-dir ../js/wasm",
    "build:wasm:release": "cd ../src-web && wasm-pack build --release --target web --out-dir ../js/wasm",
    "preview": "vite preview",
    "prepare": "npm run build"
  },
  "files": [
    "dist",
    "wasm"
  ],
  "dependencies": {},
  "devDependencies": {
    "typescript": "^5.0.0",
    "vite": "^7.0.0",
    "vite-plugin-wasm": "^3.3.0",
    "vite-plugin-top-level-await": "^1.4.0"
  },
  "keywords": [
    "audio",
    "waveform",
    "visualization",
    "webassembly",
    "wasm"
  ],
  "author": "",
  "license": "MIT"
}